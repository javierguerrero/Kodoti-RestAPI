@model KodotiMvcClient.ViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Iniciar sesión";
}

<h1>Autenticación</h1>

<form asp-controller="Account" asp-action="Login" method="post">
    <input asp-for="ReturnUrl" type="hidden" />

    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingrese su correo" />
        <small id="emailHelp">We'll never share your email with anyone else.</small>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Contraseña</label>
        <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Ingrese su contraseña" />
    </div>

    <button type="submit" class="btn btn-primary">Ingresar</button>
</form>